<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/achievementCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/achievementLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/achievementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryExtraDark"/>

        <ImageView
            android:id="@+id/achievedIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/achievementTitle"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/achievementLevelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/achievementDescription"
            android:text="@string/medal"
            android:textColor="@color/colorPrimaryExtraDark"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/achievementLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/achievementLevelTitle"
            android:layout_toEndOf="@id/achievementLevelTitle"
            android:layout_alignBottom="@id/achievementLevelTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            card_view:srcCompat="@drawable/ic_share" />

    </RelativeLayout>

</android.support.v7.widget.CardView>