<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Resumen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/accountProfileImage"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="3"
        app:srcCompat="@drawable/ic_account_profile" />

    <TextView
        android:id="@+id/accountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAlignment="center"
        android:text="aTodoGas"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="15dp">

        <TextView
            android:id="@+id/numberPointsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryExtraDark"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="@string/numberPointsTitle"/>

        <TextView
            android:id="@+id/numberPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/numberPointsTitle"
            android:layout_alignBaseline="@id/numberPointsTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/numberRankingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numberPointsTitle"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryExtraDark"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="@string/numberRankingTitle"/>

        <TextView
            android:id="@+id/numberRankingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/numberRankingTitle"
            android:layout_alignBaseline="@id/numberRankingTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/numberAchievementsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/numberAchievementsText"
            android:layout_toStartOf="@+id/numberAchievementsText"
            android:text="@string/numberAchievementsTitle"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryExtraDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberAchievementsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp"
            android:text="- de -"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_podium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goldTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textStyle="bold"
                android:textSize="26dp"
                android:text="-" />

            <TextView
                android:id="@+id/silverTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textStyle="bold"
                android:textSize="26dp"
                android:text="-"/>

            <TextView
                android:id="@+id/bronzeTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:textColor="@color/colorPrimaryExtraDark"
                android:textStyle="bold"
                android:textSize="26dp"
                android:text="-"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>